{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/auth/login", "dest": "/api/auth/login.js" },
      { "src": "/api/auth/signup", "dest": "/api/auth/signup.js" },
      { "src": "/api/auth/logout", "dest": "/api/auth/logout.js" },
      { "src": "/api/users/me", "dest": "/api/users/me.js" },
      { "src": "/api/users/stats", "dest": "/api/users/stats.js" },
      { "src": "/api/users/([^/]+)", "dest": "/api/users/[id].js" },
      { "src": "/api/posts", "dest": "/api/posts/index.js" },
      { "src": "/api/posts/([^/]+)/comments/([^/]+)", "dest": "/api/posts/[id]/comments/[commentId].js" },
      { "src": "/api/posts/([^/]+)/comments", "dest": "/api/posts/[id]/comments.js" },
      { "src": "/api/posts/([^/]+)", "dest": "/api/posts/[id].js" }
      ]
  }