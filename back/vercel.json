{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
        { "src": "/api/auth/login", "dest": "/api/auth/login.js" },
        { "src": "/api/auth/signup", "dest": "/api/auth/signup.js" },
        { "src": "/api/auth/logout", "dest": "/api/auth/logout.js" },
        { "src": "/api/users/me", "dest": "/api/users/me.js" },
        { "src": "/api/posts", "dest": "/api/posts/index.js" },
        { "src": "/api/posts/([^/]+)", "dest": "/api/posts/[id].js" }
      ]
  }